
@{
    Layout = "_LoginLayout";
}

<div class="login-box">
    <div class="login-logo">
        <img id="logo" src="~/images/ScoreExec copy.png" />
    </div>
    <!-- /.login-logo -->
    <div class="login-box-body">
        <h4>You email is not approved by the admin yet</h4>
        <h4>Contact your admin</h4>
        <h1>Thank you</h1>

        <!-- /.social-auth-links -->
        <a id="Login" style="cursor: pointer" class="text-center">Login</a>
    </div>
    <!-- /.login-box-body -->
</div>
@section scripts {
  
    <style>
        #logo {
            background-image: url('');
            background-size: cover;
            background-position: center;
            height: 45px;
            width: 200px;
            
        }
    </style>
    <script>
        $('#Login').click(function () {
            $(function () {
                window.location = '/Account/Login'
            });

        })

    </script>
}