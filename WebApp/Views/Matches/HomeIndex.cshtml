@{
    ViewData["Title"] = "Home Page";
}
<div class="container-fluid">
    <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
            <li data-target="#myCarousel" data-slide-to="3"></li>
        </ol>
        <div class="carousel-inner" role="listbox">
            <div class="item">
                <img src="~/images/pakChampion.svg" alt="Package Management" class="img-responsive" />
                <div class="carousel-caption" role="option">
                    <p>
                        Champions will remain champions
                    </p>
                </div>
            </div>
            <div class="item active">
                <img src="~/images/1Svg.svg" alt="ASP.NET" class="img-responsive" />
                <div class="carousel-caption" role="option">
                    <p>

                    </p>
                </div>
            </div>
            <div class="item">
                <img src="~/images/pakistan team facebook (6).svg" alt="Visual Studio" class="img-responsive" />
                <div class="carousel-caption" role="option">
                    <p>

                    </p>
                </div>
            </div>

            <div class="item">
                <img src="~/images/c.svg" alt="Microsoft Azure" class="img-responsive" />
                <div class="carousel-caption" role="option">
                    <p>

                    </p>
                </div>
            </div>
        </div>
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <br />
    <br />
    <div class="row">
        <div class="dl-horizontal">
            <div class="col-md-4">
                <a data-toggle="tooltip" data-placement="top" title="Teams" asp-controller="Teams" rel="tooltip" asp-action="Index">

                    <img src="~/images/Team2.jpg" class="img-responsive" style='margin-bottom: 2em; background-size:cover' onclick="playerStatistics" id="PlayerImg" />
                </a>
            </div>
            <div class="col-md-4">
                <a data-toggle="tooltip" data-placement="top" title="Players" asp-controller="Players" rel="tooltip" asp-action="Index">
                    <img src="~/images/TeamPlayer.png" class="img-responsive" style='margin-bottom: 2em; background-size:cover' onclick="playerStatistics" id="PlayerImg" />
                </a>
            </div>
            <div class="col-md-4">
                <a data-toggle="tooltip" data-placement="top" title="Tournaments" asp-controller="Tournament" rel="tooltip" asp-action="Index">
                    <img src="~/images/TournamentLogo.png" class="img-responsive" style='margin-bottom: 2em; background-size:cover' onclick="playerStatistics" id="PlayerImg" />
                </a>
            </div>
            <div class="col-md-4">
                <a data-toggle="tooltip" data-placement="top" title="Matches" asp-controller="Matches" rel="tooltip" asp-action="Index">
                    <img src="~/images/Ground.jpg" class="img-responsive" style='margin-bottom: 2em; background-size:cover' onclick="playerStatistics" id="PlayerImg" />
                </a>
            </div>
            <div class="col-md-4">
                <a data-toggle="tooltip" data-placement="top" title="Statistics"  asp-controller="Players" asp-action="AlPlayerStatistics">
                    <img src="~/images/stats.jpg" class="img-responsive" style='margin-bottom: 2em; background-size:cover' onclick="playerStatistics" id="PlayerImg" />
                </a>
            </div>
            <div class="col-md-4">
                <a asp-controller="Players" rel="tooltip" asp-action="Index">
                    <img src="~/images/Team2.jpg" class="img-responsive" style='margin-bottom: 2em; background-size:cover' onclick="playerStatistics" id="PlayerImg" />
                </a>
            </div>
        </div>

    </div>
</div>
@section Scripts{
    <script>

    </script>
