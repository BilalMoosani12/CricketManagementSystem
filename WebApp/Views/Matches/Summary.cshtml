<div class="container-fluid">
    <div class="container-fluid">
        <div class="modal-header bg-teal-active">
            <h4 class="modal-title">Match Summary</h4>
        </div>
        <div class="modal-body">
            @if (Model.Summary2dto.Type != "Tournament")
            {
                <div class="col-md-12">
                    <h4>@Model.Summary2dto.Type Match: Ground :@Model.Summary2dto.GroundName @Model.Summary2dto.Place</h4>
                </div>
            }
            else 
            {
                <div class="col-md-12">
                    <h4>@Model.Summary2dto.TournamentName @Model.Summary2dto.Stage : Ground :@Model.Summary2dto.GroundName</h4>
                </div>
            }
           

            <br>
            <div class="col-md-7 bg-blue-active">
                <h4>@Model.Summary2dto.HomeTeam</h4>
            </div>
            <div class="col-md-3 bg-blue-active">
                <h4> Overs</h4>
            </div>
            <div class="col-md-2 bg-blue-gradient">
                <h4>@Model.Summary2dto.HomeTeamScore/@Model.Summary2dto.HomeTeamWickets</h4>
            </div>


            <div class="col-md-6">
                <table class="table table-striped">
                    <tbody>
                        @foreach (var item in Model.MatchSummaryPlayerList)
                        {
                            <tr>
                                <td>@item.HomeBatsman</td>
                                <td>@item.HomeBatsmanRuns</td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
            <div class="col-md-6">
                <table class="table">
                    <tbody>
                        @foreach (var item in Model.MatchSummaryPlayerList)
                        {
                            <tr>
                                <td>@item.OppBowler</td>
                                <td>@item.OppBowlerWicket/@item.OppBowlerRuns</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>


            <div class="col-md-7 bg-green-active">
                <h4>@Model.Summary2dto.OppponentTeam</h4>
            </div>
            <div class="col-md-3 bg-green-active">
                <h4>Overs</h4>
            </div>
            <div class="col-md-2 bg-green-gradient">
                <h4>@Model.Summary2dto.OpponentsTeamScore/@Model.Summary2dto.OppenentTeamWickets</h4>
            </div>


            <div class="col-md-6">
                <table class="table table-striped">
                    <tbody>
                        @foreach (var item in Model.MatchSummaryPlayerList)
                        {
                            <tr>
                                <td>@item.OppBatsman</td>
                                <td>@item.HomeBatsmanRuns</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="col-md-6">
                <table class="table">
                    <tbody>
                        @foreach (var item in Model.MatchSummaryPlayerList)
                        {
                            <tr>
                                <td>@item.HomeBowler</td>
                                <td>@item.HomeBowlerWicket/@item.HomeBowlerRuns</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>



            <div class="col-md-12 bg-teal">
                <h4>@Model.Summary2dto.ManOfTheMatch</h4>
            </div>

            <div class="wizard footer col-md-12 bg-teal-active">
                <h4>@Model.Summary2dto.Result</h4>
            </div>

        </div>



    </div>
</div>

