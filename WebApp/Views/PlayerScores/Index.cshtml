@model WebApp.ViewModels.ScoreCarddto


<div class="container-fluid">
    <div class="row">
        <div class="row">
            <div class="col-sm-12">
                <div class="col-sm-2">
                    <label style="width: 100%" disabled="disabled">@ViewBag.HomeTeam</label>
                </div>
                <div class="col-sm-1">
                    <p>Vs</p>
                </div>
                <div class="col-sm-2">
                    <label style="width: 100%" disabled="disabled">@ViewBag.OpponentTeam</label>
                </div>
            </div>
        </div>
        @if (Model.HomeTeamScoreCard != null && Model.HomeTeamScoreCard.Any() || Model.OpponentTeamScoreCard != null && Model.OpponentTeamScoreCard.Any() || Model.TeamScoreCard != null && Model.TeamScoreCard.Any())
        {
            <div class="form-group">
                <a class="btn btn-primary" style="width: 100%" button="button" asp-action="Edit" asp-route-homeTeamId="@ViewBag.homeTeamId" asp-route-oppTeamId="@ViewBag.oppTeamId" asp-route-matchId="@ViewBag.matchId">Edit</a>
            </div>
        }
        else
        {
            <div class="form-group">
                <a class="btn btn-primary" style="width: 100%" button="button" asp-action="Create" asp-route-homeTeamId="@ViewBag.homeTeamId" asp-route-oppTeamId="@ViewBag.oppTeamId" asp-route-matchId="@ViewBag.matchId">Add</a>
            </div>
        }


        <div class="col-md-12">
            <!-- Custom Tabs -->
            <div class="nav-tabs-custom">
                <ul class="nav nav-tabs">
                    <li><a style="width: 100%" href="#tab_1" data-toggle="tab"><h4 class="fas fa-flag-checkered">@ViewBag.HomeTeam</h4></a></li>
                    <li><a href="#tab_2" style="width: 100%" data-toggle="tab"><h4 class="far fa-flag">@ViewBag.OpponentTeam</h4></a></li>
                    <li><a href="#tab_3" style="width: 100%" data-toggle="tab"><h4 class="fas fa-check">Match Summary</h4></a></li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane active" id="tab_1">
                        @if (Model.HomeTeamScoreCard != null && Model.HomeTeamScoreCard.Any())
