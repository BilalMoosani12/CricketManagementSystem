@model IEnumerable<CricketApp.Domain.PlayerScore>
<div class="container-fluid">
    <div class="card wizard-card">
        <div class="form-inline">
            <div class="wizard-header">
                <h3 class="wizard-title">
                    Match Score
                </h3>
            </div>
            <div class="col-sm-2">
                <p>
                    <a id="AddBtn" asp-action="Create" asp-route-teamId="@ViewBag.teamId" asp-route-matchId="@ViewBag.matchId" class="btn btn-primary">Add</a>
                </p>
            </div>
            <div class="col-sm-2">
                <p>
                    <a id="EditBtn" asp-action="Edit" asp-route-teamId="@ViewBag.teamId" asp-route-matchId="@ViewBag.matchId" class="btn btn-primary">Edit</a>
                </p>
            </div>
            <div class="col-sm-2">
                <p>
                    <a id="AddBtn" asp-action="Delete" asp-route-teamId="@ViewBag.teamId" asp-route-matchId="@ViewBag.matchId" class="btn btn-primary">Delete</a>
                </p>
            </div>
        </div>
        @*<dl class="dl-horizontal">
                <div class="col-sm-2">
                    <div class="form-group">
                        <label class="control-label">opponent</label>
                        <input asp-for="@model." class="form-control" />
                    </div>
                </div>
                <dt>
