                            <table class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>
                                            S.No
                                        </th>
                                        <th>
                                            Player Name
                                        </th>
                                        <th>
                                            Runs
                                        </th>
                                        <th>
                                            Balls
                                        </th>
                                        <th>
                                            St. Rate
                                        </th>
                                        <th>
                                            How Out
                                        </th>
                                        <th>
                                            Overs
                                        </th>
                                        <th>
                                            Runs
                                        </th>
                                        <th>
                                            Wickets
                                        </th>
                                        <th>
                                            Econ
                                        </th>

                                        <th>
                                            Stump
                                        </th>
                                        <th>
                                            Catch
                                        </th>
                                        <th>
                                            Maiden
                                        </th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.HomeTeamScoreCard)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Position)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Player.Player_Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Bat_Runs)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Bat_Balls)
                                            </td>
                                            <td>
                                                @{

                                                    var strikeRate = Convert.ToDouble(item.Bat_Runs) * 100 / Convert.ToDouble(item.Bat_Balls);

                                                    <span>@(Double.IsNaN(strikeRate) || Double.IsInfinity(strikeRate) ? "" : strikeRate.ToString("0.00"))</span>
                                                }
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.HowOut)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Overs)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Ball_Runs)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Wickets)
                                            </td>
                                            <td>
                                                @{

                                                    var econ = Convert.ToDouble(item.Ball_Runs) / Convert.ToDouble(item.Overs);

                                                    <span>@(Double.IsNaN(econ) || Double.IsInfinity(econ) ? "" : econ.ToString("0.00"))</span>
                                                }
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.Stump)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Catches)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Maiden)
                                            </td>
                                            <td>
                                                <a data-placement="top" style="cursor: pointer" title="Add Player Score" data-toggle="modal" data-target="#PlayerScoreModal" onclick="Player(@item.PlayerScoreId)"><i class="fas fa-walking"></i></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>

                        }
                        else
                        {
                            <div class="wizard-header">
                                <h3 class="wizard-title">
                                    <i class="far fa-frown"> Record is not Inserted</i>
                                </h3>
                            </div>

                        }
                    </div>
                    <!-- /.tab-pane -->
