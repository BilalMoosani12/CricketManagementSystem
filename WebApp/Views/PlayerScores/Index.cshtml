@model WebApp.ViewModels.ScoreCarddto


<div class="container-fluid">
    <div class="row">
        @if (Model.HomeTeamScoreCard != null && Model.HomeTeamScoreCard.Any() || Model.OpponentTeamScoreCard != null && Model.OpponentTeamScoreCard.Any() || Model.TeamScoreCard != null && Model.TeamScoreCard.Any())
        {
            <div class="form-group">
                <a class="btn btn-primary" button="button" asp-action="Edit" asp-route-homeTeamId="@ViewBag.homeTeamId" asp-route-oppTeamId="@ViewBag.oppTeamId" asp-route-matchId="@ViewBag.matchId">Edit</a>
            </div>
        }
        else
        {
            <div class="form-group">
                <a class="btn btn-primary" button="button" asp-action="Create" asp-route-homeTeamId="@ViewBag.homeTeamId" asp-route-oppTeamId="@ViewBag.oppTeamId" asp-route-matchId="@ViewBag.matchId">Add</a>
            </div>
        }

        <div class="row">
            <div class="col-sm-12">
                <div class="col-sm-2">
                    <select asp-items="ViewBag.HomeTeam" disabled="disabled" class="js-example-basic-single"></select>
                </div>
                <div class="col-sm-1">
                    <p>Vs</p>
                </div>
                <div class="col-sm-2">
                    <select asp-items="ViewBag.OpponentTeam" disabled="disabled" class="js-example-basic-single"></select>
                </div>
            </div>
        </div>
        <section>
            <div class="wizard">
                <div class="wizard-inner">
                    <div class="connecting-line"></div>
                    <ul class="nav nav-tabs" role="tablist">
                        <li role="presentation" class="active">
                            <a href="#step1" data-toggle="tab" aria-controls="step1" role="tab">
                                <span class="round-tab" data-toggle="tooltip" title="First Inning">
                                    <i class="fas fa-globe-americas"></i>
                                </span>
                            </a>
                        </li>
                        <li role="presentation">
                            <a href="#step2" data-toggle="tab" aria-controls="step2" role="tab">
                                <span class="round-tab" data-toggle="tooltip" title="Second Inning">
                                    <i class="fas fa-globe-africa"></i>
                                </span>
                            </a>
                        </li>
                        <li role="presentation">
                            <a href="#complete" data-toggle="tab" aria-controls="complete" role="tab">
                                <span class="round-tab" data-toggle="tooltip" title="Match Summary">
                                    <i class="fas fa-check-circle"></i>
                                </span>
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="tab-content">
                    <div class="tab-pane active" role="tabpanel" id="step1">
                        <div class="container-fluid">
                            <div class="form-inline">
                                <div class="row">
                                    <div class="col-sm-2">
                                        <select asp-items="ViewBag.HomeTeam" disabled="disabled" class="js-example-basic-single"></select>
                                    </div>
                                </div>

                                @if (Model.HomeTeamScoreCard != null && Model.HomeTeamScoreCard.Any())
                                {

                                    <table class="table table-bordered table-striped">
