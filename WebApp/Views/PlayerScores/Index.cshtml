                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>

                        }
                        else
                        {
                            <div class="wizard-header">
                                <h3 class="wizard-title">
                                    <i class="far fa-frown"> Record is not Inserted</i>
                                </h3>
                            </div>

                        }
                    </div>
                    <!-- /.tab-pane -->
                    <div class="tab-pane" id="tab_3">
                        @if (Model.TeamScoreCard != null && Model.TeamScoreCard.Any())
                        {

                            <table class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>
                                            Team Name
                                        </th>
                                        <th>
                                            Total Score
                                        </th>
                                        <th>
                                            Given Extras
                                        </th>
                                        <th>
                                            Wide Balls
                                        </th>
                                        <th>
                                            No Balls
                                        </th>
                                        <th>
                                            Byes
                                        </th>
                                        <th>
                                            Leg Byes
                                        </th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.TeamScoreCard)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Team.Team_Name)
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TotalScore)
                                            </td>
                                            <td>
                                                @{

                                                    var TotalExtras = item.Wideballs + item.NoBalls + item.Byes + item.LegByes;

                                                    <span>@(TotalExtras)</span>
                                                }
                                            </td>
