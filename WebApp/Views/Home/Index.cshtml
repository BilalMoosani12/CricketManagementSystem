            <div class="col-md-6">
                <div class="box box-warning box-solid">
                    <div class="box-header with-border">
                        <h3 class="box-title">Last Match Summary</h3>
                        <div class="box-tools pull-right">
                            <button type="button" class="btn btn-box-tool" data-widget="collapse">
                                <i class="fa fa-minus"></i>
                            </button>
                        </div>
                        <!-- /.box-tools -->
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <div class="form-inline">
                            <div class="col-md-12">

                                <div class="col-md-4">
                                    @{
                                        if (Model.HomeTeamTeamLogo != null)
                                        {
                                            var base64 = Model.HomeTeamTeamLogo == null || !Model.HomeTeamTeamLogo.Any() ? "" : Convert.ToBase64String(Model.HomeTeamTeamLogo);
                                            <div class="img-responsive" id="Img" style='margin-bottom: 1em; background-size:cover; background-image: url("data:image/png;base64,@base64");'></div>

                                        }
                                        else
                                        {
                                            <span class="label label-warning pull-left"><i class="fas fa-question"></i></span>

                                        }
                                    }
                                </div>
                                <div class="col-md-8">
                                    <strong> @Model.HomeTeam </strong> @Model.HomeTeamScore/@Model.HomeTeamWickets
                                </div>
                            </div>
                            <div class="col-md-12">

                                <div class="col-md-4">
                                    @{
                                        if (Model.OpponentTeamLogo != null)
                                        {
                                            var base64 = Model.OpponentTeamLogo == null || !Model.OpponentTeamLogo.Any() ? "" : Convert.ToBase64String(Model.OpponentTeamLogo);
                                            <div class="img-responsive" id="Img" style='margin-bottom: 1em; background-size:cover; background-image: url("data:image/png;base64,@base64");'></div>

                                        }
                                        else
                                        {
                                            <span class="label label-warning pull-left"><i class="fas fa-question"></i></span>

                                        }
                                    }
                                </div>
                                <div class="col-md-8">
                                    <strong> @Model.OppponentTeam </strong> @Model.OpponentsTeamScore/@Model.OppenentTeamWickets
                                </div>
                            </div>
                            <div class="col-md-12">
                                <p>@Model.Summary</p>
                            </div>

                            <!-- /.box-body -->
                        </div>
                        <!-- /.box -->
                    </div>

                </div>
            </div>
        </div>
