@model WebApp.ViewModels.HomeScreendto
@*@{
        ViewData["Title"] = "";
    }*@
<div class="container-fluid">
    <ol class="breadcrumb">
        <li><a>Home /</a></li>
    </ol>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="callout callout-info col-md-12 ">
            <h2>Score Exec</h2>
            <p>
                Score Executive is a complete ERP solution for your cricket record maintaining. We are commited to secure and protect your data
                and give you the best result. You can find complete statistics of any player. Score Exec is cricket management web app portal where we market the local clubs and different cricket teams to maintain their records and statistics
            </p>
        </div>
    </div>
    <div class="row">
        <div class="dl-horizontal">
            <div class="col-lg-3 col-xs-6">
                <!-- small box -->
                <div class="small-box bg-red">
                    <div class="inner">
                        <h3>@Model.Tournaments</h3>
                        <p>Tournaments</p>
                    </div>
                    <div class="icon">
                        <i class="flaticon-cricket-ground-1"></i>
                    </div>
                    <a data-toggle="tooltip" data-placement="top" title="Click me" asp-controller="Tournament" asp-action="Index" class="small-box-footer">
                        Tournaments <i class="fa fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>
            <div class="col-lg-3 col-xs-6">
                <!-- small box -->
                <div class="small-box bg-aqua">
                    <div class="inner">
                        <h3>@Model.Teams</h3>
                        <p>Teams</p>
                    </div>
                    <div class="icon">
                        <i class="far fa-flag"></i>
                    </div>
                    <a data-toggle="tooltip" data-placement="top" title="Click me" asp-controller="Teams" asp-action="Index" class="small-box-footer">
                        Teams List <i class="fa fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>
            <div class="col-lg-3 col-xs-6">
                <!-- small box -->
                <div class="small-box bg-yellow">
                    <div class="inner">
                        <h3>@Model.Players</h3>
                        <p>Players</p>
                    </div>
                    <div class="icon">
                        <i class="flaticon-cricket-helmet"></i>
                    </div>
                    <a data-toggle="tooltip" data-placement="top" title="Click me" asp-controller="Players" asp-action="Index" class="small-box-footer">
                        Players List <i class="fa fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>
            <div class="col-lg-3 col-xs-6">
                <!-- small box -->
                <div class="small-box bg-green">
                    <div class="inner">
                        <h3>@Model.Matches</h3>
                        <p>Cricket Match</p>
                    </div>
                    <div class="icon">
                        <i class="flaticon-cricket-4"></i>
                    </div>
                    <a data-toggle="tooltip" data-placement="top" title="Click me" asp-controller="Matches" asp-action="Index" class="small-box-footer">
                        Matches List <i class="fa fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>
            <div class="col-lg-3 col-xs-6">
                <!-- small box -->
                <div class="small-box bg-aqua">
                    <div class="inner">
                        <h3>@Model.Series</h3>
                        <p>Series</p>
                    </div>
                    <div class="icon">
                        <i class="flaticon-cricket-ground"></i>
                    </div>
                    <a data-toggle="tooltip" data-placement="top" title="Click me" asp-controller="MatchSeries" asp-action="Index" class="small-box-footer">
                        Match Series List <i class="fa fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>
            <div class="col-lg-3 col-xs-6">
                <!-- small box -->
                <div class="small-box bg-red">
                    <div class="inner">
                        <h3>@Model.Records+</h3>
                        <p>Records</p>
                    </div>
                    <div class="icon">
                        <i class="flaticon-bar-chart"></i>
                    </div>
                    <a data-toggle="tooltip" data-placement="top" title="Click me" asp-controller="Records" asp-action="Index" class="small-box-footer">
                        Statistics <i class="fa fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>
            <div class="col-md-6 col-xs-12">
                <div class="box box-warning box-solid">
                    <div class="box-header with-border">
                        <h3 class="box-title">Last Match Summary</h3>
                        <div class="box-tools pull-right">
                            <button type="button" class="btn btn-box-tool" data-widget="collapse">
                                <i class="fa fa-minus"></i>
                            </button>
                        </div>
                        <!-- /.box-tools -->
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <div class="form-inline">
                            <ul class="list-inline">
                                <li>
                                    @{
                                        if (Model.HomeTeamTeamLogo != null)
                                        {
                                            var base64 = Model.HomeTeamTeamLogo == null || !Model.HomeTeamTeamLogo.Any() ? "" : Convert.ToBase64String(Model.HomeTeamTeamLogo);
                                            <div class="img-responsive" id="Img" style='background-size:cover; background-image: url("data:image/png;base64,@base64");'></div>

                                        }
                                        else
                                        {
                                            <span class="label label-warning pull-left"><i class="fas fa-question"></i></span>

                                        }
                                    }
                                </li>
                                <li>  <strong> @Model.HomeTeam </strong> @Model.HomeTeamScore/@Model.HomeTeamWickets</li>



                            </ul>
                            <ul class="list-inline">

                                <li>
                                    @{
                                        if (Model.OpponentTeamLogo != null)
                                        {
                                            var base64 = Model.OpponentTeamLogo == null || !Model.OpponentTeamLogo.Any() ? "" : Convert.ToBase64String(Model.OpponentTeamLogo);
                                            <div class="img-responsive" id="Img" style='background-size:cover; background-image: url("data:image/png;base64,@base64");'></div>

                                        }
                                        else
                                        {
                                            <span class="label label-warning pull-left"><i class="fas fa-question"></i></span>

                                        }
                                    }
                                </li>
                                <li>
                                    <strong> @Model.OppponentTeam </strong> @Model.OpponentsTeamScore/@Model.OppenentTeamWickets
                                </li>
                            </ul>
                            <div class="col-md-12">
                                <p>@Model.Summary</p>
                            </div>

                            <!-- /.box-body -->
                        </div>
                        <!-- /.box -->
                    </div>

                </div>
            </div>
        </div>

        <div class="col-md-12">
            <ul class="list-inline">
                <li>
                    <div class="img-responsive" style='background-size:cover; background-image: url("/images/poc copy.png");' id="Img"></div>
                </li>
                <li>

                    <h3>Pole of Cricket Official Partners of Score Exec</h3>

                </li>
            </ul>
        </div>
    </div>
</div>
@section Scripts{
    <style>
        #Img {
            background-image: url('');
            background-size: cover;
            background-position: center;
            height: 30px;
            width: 30px;
        }

    </style>
}
