@model CricketApp.Domain.Player

@{
    ViewData["Title"] = "Edit";
}

<div class="container-fluid">
    <div class="container-fluid">
        <div class="row">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="PlayerId" />
                <div class="col-md-8" style="margin-top:3em;">
                    <div class="col-md-4">
                        <div class="form-group label-floating">
                            <label asp-for="Player_Name" class="control-label">Player Name<i class="fa fa-asterisk" style="color: red" aria-hidden="true"></i></label>
                            <input asp-for="Player_Name" required class="form-control" />
                            <span asp-validation-for="Player_Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group label-floating">
                            <label asp-for="Contact" class="control-label">Contact No.</label>
                            <input asp-for="Contact" id="playerContact" class="form-control" />
                            <span asp-validation-for="Contact" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <div class="form-group label-floating">
                                <label asp-for="CNIC" class="control-label">Cnic</label>
                                <input asp-for="CNIC" id="playerCnic" class="form-control" />
                                <span asp-validation-for="CNIC" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="col-md-12">
                            <label>Role<i class="fa fa-asterisk" style="color: red" aria-hidden="true"></i></label>
                        </div>
                        <div class="col-md-12">
                            <select asp-for="Role" required placeholder="--Select--" class="js-example-basic-single">
                                <option value="">--Select--</option>
                                <option>Batsman</option>
                                <option>Bowler</option>
                                <option>All-Rounder</option>
                                <option>Wicket-Keeper Batsman</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <label>Batting Style</label>
                        <select asp-for="BattingStyle" placeholder="--Select--" class="js-example-basic-single">
                            <option value="">--Select--</option>
                            <option>Right-hand bat</option>
                            <option>Left-hand bat</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label>Bowling Style</label>
                        <select asp-for="BowlingStyle" placeholder="--Select--" class="js-example-basic-single">
                            <option value="">--Select--</option>
                            <option>Right-arm fast</option>
                            <option>Right-arm fast medium</option>
                            <option>Right-arm medium fast</option>
                            <option>Left-arm fast</option>
                            <option>Left-arm fast medium</option>
                            <option>Left-arm medium fast</option>
                            <option>Left-arm medium</option>
                            <option>Off break (right-arm)</option>
                            <option>Leg break (right-arm)</option>
                            <option>Slow left-arm orthodox</option>
                            <option>Slow left-arm chinaman</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label>Team<i class="fa fa-asterisk" style="color: red" aria-hidden="true"></i></label>
                        <select asp-for="TeamId" asp-items="ViewBag.TeamId" required placeholder="--Select--" class="js-example-basic-single">
                            <option value="">--Select--</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label>Gender<i class="fa fa-asterisk" style="color: red" aria-hidden="true"></i></label>
                        <select asp-for="Gender" required placeholder="--Select--" class="js-example-basic-single">
                            <option value="">--Select--</option>
                            <option>Male</option>
                            <option>Female</option>
                        </select>
                    </div>
                    <div class="col-sm-4" style="margin-top: 20px">
                        <div class="checkbox">
                            <label>
                                Guest
                                <input type="checkbox" asp-for="IsGuestPlayer" value="true">
                            </label>
                        </div>
                    </div>
                    <div class="col-sm-4" style="margin-top: 20px">
                        <div class="checkbox">
                            <label>
                                Deactivate
                                <input type="checkbox" asp-for="IsDeactivated" value="true">
                            </label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <label>Birth</label>
                        <input type="date" asp-for="DOB" class="form-control" />
                        <span asp-validation-for="DOB" class="text-danger"></span>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <div class="form-group label-floating">
                                <label asp-for="Address" class="control-label">St. Address</label>
                                <input asp-for="Address" class="form-control" />
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-6">
                                @{
                                    var base64 = Model.PlayerLogo == null || !Model.PlayerLogo.Any() ? "" : Convert.ToBase64String(Model.PlayerLogo);
                                    <div class="img-responsive" id="PlayerImg" style='margin-bottom: 2em; background-size:cover; background-image: url("data:image/png;base64,@base64");'></div>
                                }
                            </div>
                            <div class="col-md-6" style="margin-top:7.7em;">
                                <label asp-for="PlayerImage" class="btn btn-primary">
                                    Upload <input asp-for="PlayerImage" type="file" class="hidden" style="height:auto" />
                                </label>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="footer">
        <div class="container text-center">
            <button id="BackBtn" class="btn btn-primary btn-xs">Back</button>
        </div>
    </div>

</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/js/select2.min.js"></script>
    <style>
        #PlayerImg {
            background-image: url('');
            background-size: cover;
            background-position: center;
            height: 160px;
            width: 140px;
            border: 1px solid #bbb;
        }
    </style>
    <script>

        //Select2
        $(document).ready(function () {
            $('.js-example-basic-single').select2();
        });
        $(function () {
            $('#BackBtn').click(function () {
                window.location = '/Players/Index'
            });
            function readURL(input) {

                if (input.files && input.files[0]) {
                    var reader = new FileReader();

                    reader.onload = function (e) {
                        //$('#PlayerImg').attr('src', e.target.result);
                        const PlayerImg = document.getElementById('PlayerImg');
                        PlayerImg.style.backgroundImage = "url(" + e.target.result + ")";
                        PlayerImg.style.backgroundPosition = "cover";
                    }

                    reader.readAsDataURL(input.files[0]);
                }
            }

            $("#PlayerImage").change(function () {
                readURL(this);
            });
        });


        const phoneNumber = "9999-9999999";
        const cnic = "99999-9999999-9";

        const teleNumber = document.getElementById("playerContact");

        let telIm = new Inputmask(phoneNumber);
        telIm.mask(teleNumber);

        const cnicNumber = document.getElementById("playerCnic");

        let cnicIm = new Inputmask(cnic);
        cnicIm.mask(cnicNumber);
    </script>
}
