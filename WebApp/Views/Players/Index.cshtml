        @@media only screen and (max-width: 768px) {
            /* For mobile phones: */
            .material-icons.md-14 {
                font-size: 14px;
            }

            body {
                font-size: 1em;
            }
        }

        td {
            text-align: center !important;
        }

        th {
            text-align: center !important;
        }


        #filter-panel {
            border: 1px solid #bbb;
