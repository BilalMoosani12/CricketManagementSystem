@model WebApp.ViewModels.PlayerStatisticsdto

@{
    ViewData["Title"] = "Player Profile";
}

<div class="backImage">

    <div class="container-fluid">
            <div class="col-sm-8 col-sm-offset-2">
                <!--      Wizard container        -->
                <div class="wizard-container">
                    <div class="card wizard-card" id="wizard">
                        <div class="wizard-header">
                            <h3 class="wizard-title">
                                Player Profile
                            </h3>
                        </div>
                        <div class="col-md-3">
                            <div class="img-responsive " style="margin-left: 2em; background-size:cover" onclick="playerStatistics" id="PlayerImg"></div>
                        </div>
                        <div class="col-md-6">
                            <dl class="dl-horizontal">
                                <dt>
                                    Full Name
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.PlayerName)
                                </dd>
                                <dt>
                                    Playing Role
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.Role)
                                </dd>
                                <dt>
                                    Batting Style
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.BattingStyle)
                                </dd>
                                <dt>
                                    Bowling Style
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.BowlingStyle)
                                </dd>
                                <dt>
                                    Born
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.DOB)
                                </dd>
                                <dt>
                                    Major Team
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.TeamName)
                                </dd>
                            </dl>
                        </div>

                    </div>
                    <div class="card wizard-card" data-color="purple" id="wizard">

                        <form action="">
                            <!--        You can switch " data-color="blue" "  with one of the next bright colors: "green", "orange", "red", "purple"             -->

                            <div class="wizard-navigation">
                                <ul>
                                    <li><a href="#batting" data-toggle="tab">Batting</a></li>
                                    <li><a href="#bowling" data-toggle="tab">Bowling</a></li>
                                    <li><a href="#fielding" data-toggle="tab">Fielding</a></li>
                                </ul>
                            </div>
                            <div class="tab-content">
                                <div class="tab-pane" id="batting">
                                    <div class="row">
                                        <div class="col-sm-10 col-sm-offset-1">
                                            <div>
                                                <dl class="dl-horizontal">
                                                    <dt>
                                                        Matches
                                                    </dt>
                                                    <dd>
                                                        @Html.DisplayFor(model => model.TotalMatch)
                                                    </dd>
                                                    <dt>
                                                        Innings
                                                    </dt>
                                                    <dd>
                                                        @Html.DisplayFor(model => model.TotalInnings)
                                                    </dd>
                                                    <dt>
                                                        Total Runs
                                                    </dt>
                                                    <dd>
                                                        @Html.DisplayFor(model => model.TotalBatRuns)
                                                    </dd>
                                                    <dt>
                                                        Balls Faced
                                                    </dt>
                                                    <dd>
                                                        @Html.DisplayFor(model => model.TotalBatBalls)
                                                    </dd>
                                                    <dt>
                                                        50s
                                                    </dt>
                                                    <dd>
                                                        @Html.DisplayFor(model => model.NumberOf50s)
                                                    </dd>
                                                    <dt>
                                                        100s
                                                    </dt>
                                                    <dd>
                                                        @Html.DisplayFor(model => model.NumberOf100s)
                                                    </dd>
                                                    <dt>
                                                        Avg
                                                    </dt>
                                                    <dd>
                                                        @Html.DisplayFor(model => model.BattingAverage)
                                                    </dd>
                                                    <dt>
                                                        Strike Rate
                                                    </dt>
                                                    <dd>
                                                        @Html.DisplayFor(model => model.StrikeRate)
                                                    </dd>
                                                    <dt>
                                                        Best Score
                                                    </dt>
                                                    <dd>
                                                        @Html.DisplayFor(model => model.BestScore)
                                                    </dd>
                                                </dl>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="tab-pane" id="bowling">
                                    <div class="row">
                                        <div class="col-sm-10 col-sm-offset-1">
                                            <div>
                                                <dl class="dl-horizontal">
                                                    <dt>
                                                        Matches
                                                    </dt>
                                                    <dd>
                                                        @Html.DisplayFor(model => model.TotalMatch)
                                                    </dd>
                                                    <dt>
                                                        Overs
                                                    </dt>
                                                    <dd>
                                                        @Html.DisplayFor(model => model.TotalOvers)
                                                    </dd>
                                                    <dt>
                                                        Wickes
                                                    </dt>
                                                    <dd>
                                                        @Html.DisplayFor(model => model.TotalWickets)
                                                    </dd>
                                                    <dt>
                                                        Runs
                                                    </dt>
                                                    <dd>
                                                        @Html.DisplayFor(model => model.TotalBallRuns)
                                                    </dd>
                                                    <dt>
                                                        5Ws
                                                    </dt>
                                                    <dd>
                                                        @Html.DisplayFor(model => model.FiveWickets)
                                                    </dd>
                                                    <dt>
                                                        Maiden
                                                    </dt>
                                                    <dd>
                                                        @Html.DisplayFor(model => model.TotalMaidens)
                                                    </dd>
                                                    <dt>
                                                        Avg
                                                    </dt>
                                                    <dd>
                                                        @Html.DisplayFor(model => model.BowlingAvg)
                                                    </dd>
                                                    <dt>
                                                        Economy
                                                    </dt>
                                                    <dd>
                                                        @Html.DisplayFor(model => model.Economy)
                                                    </dd>

                                                    <dt>
                                                        Best
                                                    </dt>
                                                    <dd>
                                                        @Html.DisplayFor(model => model.BestBowling)
                                                    </dd>
                                                </dl>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="tab-pane" id="fielding">
                                    <div class="row">
                                        <div class="col-sm-10 col-sm-offset-1">
                                            <div>
                                                <dl class="dl-horizontal">
                                                    <dt>
                                                        Matches
                                                    </dt>
                                                    <dd>
                                                        @Html.DisplayFor(model => model.TotalMatch)
                                                    </dd>
                                                    <dt>
                                                        Catches
                                                    </dt>
                                                    <dd>
                                                        @Html.DisplayFor(model => model.TotalCatches)
                                                    </dd>
                                                    <dt>
                                                        Stumps
                                                    </dt>
                                                    <dd>
                                                        @Html.DisplayFor(model => model.TotalStumps)
                                                    </dd>
                                                    <dt>
                                                        Run Out
                                                    </dt>
                                                    <dd>
                                                        @Html.DisplayFor(model => model.TotalRunOuts)
                                                    </dd>

                                                </dl>
                                            </div>


                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="wizard-footer">


                                <div class="clearfix"></div>
                            </div>
                        </form>
                    </div>
                </div> <!-- wizard container -->
            </div>  
    </div>
    <div class="footer">
        <div class="container text-center">

        </div>
    </div>
</div>


@section Scripts{
    <script>
        $(document).ready(function () {
            $('#rootwizard').bootstrapWizard({ 'nextSelector': '.button-next', 'previousSelector': '.button-previous' });
        });
    </script>
}

@section styles {
    <style>

        dt {
            text-align: left !important;
            margin-left: 2em;
        }
        #PlayerImg {
            background-image: url('');
            background-size: cover;
            background-position: center;
            height: 160px;
            width: 140px;
            border: 1px solid #bbb;
        }
    </style>
}